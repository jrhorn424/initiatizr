{{#if editable}}
<form {{action "save" on="submit"}}>
  <div class="form-group">
    <label for="name">Name:</label>
    {{input type="text"
           class="form-control"
           id="name"
           placeholder="Character name"
           value=member.character}}
  </div>
  <div class="form-group">
    <label for="player">Player:</label>
    {{input type="text"
           class="form-control"
           id="player"
           placeholder="Player name"
           value=member.player}}
  </div>
  <div class="form-group">
    <label for="initiative">Initiative:</label>
    {{input type="text"
           class="form-control"
           id="initiative"
           placeholder="Initiative score"
           value=member.initiative}}
  </div>
  <button type="submit" class="btn btn-default">
    Save
  </button>
</form>
{{else}}
  <li class="party-list__member__trait">
    <label>Name:</label> {{member.character}}
  </li>
  <li class="party-list__member__trait">
    <label>Player:</label> {{member.player}}
  </li>
  <li class="party-list__member__trait">
    <label>Initiative:</label> {{member.initiative}}
  </li>
  <li class="party-list__member__button">
    <button class="btn btn-xs btn-default" {{action "edit"}}>
      Edit
    </button>
  </li>
{{/if}}
